CLEAR
10 DIM A(8), B(16), C(15), X(8)
20 A$= "ABCDEFGH"
110 I=1:GOSUB 130:END
130 J=1
140 IF A(J)+B(I+J)+C(I-J+8)>0 THEN 190
150 X(I)=J:A(J)=1:B(I+J)=1:C(I-J+8)=1
160 IF I>=8 THEN 170: I=I+1: GOSUB 130:I=I-1:GOTO 180
170 FOR P=1 TO 8: PRINT STR(A$,P,1);X(P);:NEXT P:PRINT
180 J=X(I):A(J)=0:B(I+J)=0:C(I-J+8)=0
190 J=J+1:IF J<= 8 THEN 140
200 RETURN
